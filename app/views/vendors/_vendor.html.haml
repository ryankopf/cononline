.col-md-6
  .card.flex-md-row.mb-4.box-shadow.h-md-250.row
    .card-body.d-flex.flex-column.align-items-start.col-md-8
      %strong.d-inline-block.mb-2.text-primary
        = vendor.category
      %h3.mb-0
        %a.text-dark{:href => url_for(vendor)}
          = vendor.name
      %p.card-text.mb-auto
        = vendor.about
      %a{:href => url_for(vendor)} Shop now
    - if vendor.image.attached?
      .col-md-4
        %img.card-img-right{:alt => "Card image cap", "data-src" => url_for(vendor.image), src: url_for(vendor.image)}
